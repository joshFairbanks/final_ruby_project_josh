

<div class="posts index page-content">
 <div class="container">
  <div class = "card">
  

<div class="card-body content-card">
<img class="card-img-top" src="http://www.queencharlotte.ca/sites/queencharlotte.civicwebcms.com/files/media/banner-sunset.jpg" alt="Card image cap">
  <br><br><h2 class = "card-title">Create a Group</h2>
<%= link_to("<< Back to Groups", groups_path, :class => 'back-link') %>
  <%= form_for(@group, :url => groups_path, :method => 'post') do |f| %>

    <table class="table table-striped" summary="User form fields">
      <tr>
        <th>Title</th>
        <td><%= f.text_field(:name) %></td>
      </tr>

    </table>
    

   
      <%= f.file_field :avatar %>
     
    <br><br>

    <div class="form-buttons">
      <%= f.submit("Create Group") %>
    </div>
</div>
</div>
</div>
  <% end %>
</div>
