<%= form_for([@post, @post.comments.build]) do |f| %>
<p>
<%= f.label :author %>:
<% if(session[:user_id] != nil) %>

<div class = "list-thumb"><%= image_tag User.find(session[:user_id]).avatar.url(:thumb) %></div>
<%= f.text_field :author, value: User.find(session[:user_id]).display_name %>
<% else %>
Anonymous (not logged in)
<%= f.text_field :author, value: "Anonymous"  %>
<%end%>

</p>
<p>
<%= f.label :description %><br>
<%= f.text_area :description %>
</p>
<br>
<p>
<%= f.submit %>
</p>
<% end %>