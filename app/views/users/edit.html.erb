

<div class="users index page-content">
 <div class="container">
  <div class = "card">
  

<div class="card-body content-card">
<img class="card-img-top" src="http://nature-to-nurture.co.uk/wp-content/uploads/2014/03/Spring-Nature-Beautiful-Lands-Banner-Nature-To-Nurture-Aromatherapy-In-Hemel-St-Albans.jpg" alt="Card image cap">
  <br><br><h2 class = "card-title">Change account details</h2>
<%= link_to("<< Back to Users", users_path, :class => 'back-link') %>
  <%= form_for(@user, :url => user_path, :method => 'patch') do |f| %>

    <table class = 'table table-striped' summary="User form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:display_name) %></td>
      </tr>
      <tr>
        <th>Email</th>
        <td><%= f.text_field(:email) %></td>
      </tr>
      <tr>
        <th>Password</th>
        <td><%= f.text_field(:password) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Update User") %>
    </div>
</div>
</div>
</div>
  <% end %>
</div>
